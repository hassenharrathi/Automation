    set selenium speed    0
    ${result}=    Create List
    FOR    ${locator}    IN    @{locators}
           ${number}=    Get Text    ${locator}
           Append To List    ${result}    ${number}        
    END
    [return]    ${result} 
    log to console    ${result}
    Sleep    10
    Close Browser
    
    